<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_background"
    tools:context=".MainActivity">

    <!-- Player 1 (Top, Rotated) -->
    <RelativeLayout
        android:id="@+id/rl_player1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_inactive"
        android:rotation="180">

        <TextView
            android:id="@+id/tv_player1_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/initial_time"
            android:textColor="@color/text_inactive"
            android_fontFamily="sans-serif-light"
            android:textSize="96sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_player1_moves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_player1_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/moves_text"
            android:textColor="@color/text_moves"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_player1_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_adjust_time"
            app:tint="@color/text_inactive"
            android:contentDescription="@string/desc_adjust_time"/>

    </RelativeLayout>

    <!-- Middle Control Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingVertical="8dp"
        android:background="@color/middle_bar"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_reset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_reset"
            app:tint="@color/icon_tint"
            android:contentDescription="@string/desc_reset"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iv_play_pause"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play"
            app:tint="@color/icon_tint"
            android:contentDescription="@string/desc_play_pause"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iv_time_settings"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_time_settings"
            app:tint="@color/icon_tint"
            android:contentDescription="@string/desc_time_settings"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iv_sound"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sound_on"
            app:tint="@color/icon_tint"
            android:contentDescription="@string/desc_sound"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Player 2 (Bottom) -->
    <RelativeLayout
        android:id="@+id/rl_player2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/color_active">

        <TextView
            android:id="@+id/tv_player2_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/initial_time"
            android:textColor="@color/text_active"
            android_fontFamily="sans-serif-light"
            android:textSize="96sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_player2_moves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_player2_timer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="@string/moves_text"
            android:textColor="@color/text_moves"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_player2_settings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:src="@drawable/ic_adjust_time"
            app:tint="@color/text_active"
            android:contentDescription="@string/desc_adjust_time"/>

    </RelativeLayout>

</LinearLayout>

